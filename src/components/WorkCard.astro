---
import { Image, getImage } from 'astro:assets';

interface Props {
	role: string;
    title: string;
    description: string;
}

const { role, title, description } = Astro.props;
---

<a href="#" class="group relative block bg-black w-3/4">


    <img alt="" src="https://images.unsplash.com/photo-1588515724527-074a7a56616c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80" class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50" />
    
    <div class="relative p-4 sm:p-6 lg:p-8">
        <p class="text-sm font-medium uppercase tracking-widest text-orange-500">{role}</p>
        <p class="text-xl font-bold text-white sm:text-2xl">{title}</p>
        
        <div class="mt-32 sm:mt-48 lg:mt-64">
            <div class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100">
                <p class="text-sm text-white">
                    {description}
                </p>
            </div>
        </div>
    </div>
</a>