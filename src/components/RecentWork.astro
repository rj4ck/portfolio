---
import type { Code, Debug } from 'astro:components'
import WorkCard from './WorkCard.astro'

interface IProject {
    title: string;
    role: string;
    tags: string[],
    description: string;
}

const projects: IProject[] = [
    {
        title: "Monteflor APP",
        role: "Developer",
        tags: ["React", "Mongo DB", "ExpressJS"],
        description: ""
    },
    {
        title: "Pistoo APP",
        role: "Developer",
        tags: ["Flutter"],
        description: ""
    }
]
---
<div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
        projects.map((project: IProject) => (
        <WorkCard {...project} />
        ))
    }
</div>
